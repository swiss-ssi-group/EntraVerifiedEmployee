@page
@model IssuerVerifiableEmployee.AdminModel
@{
    ViewData["Title"] = "Employee Administration";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Employee Administration</h2>

<p>
    <a asp-page="./Employees/Create"><i class="far fa-plus-square"></i> Create new Employee </a>
</p>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].LicenseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].IssuedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LicenseType)
                </td>
                <td>
                     @Html.DisplayFor(modelItem => item.IssuedAt)
                </td>
                <td>
                    <div class="form-group" style="width:140px">
                        <a asp-page="./Employees/Edit" asp-route-id="@item.Id"><i class="far fa-edit fa-2x"></i></a>
                        <a asp-page="./Employees/Details" asp-route-id="@item.Id"><i class="far fa-folder-open fa-2x"></i></a>
                       @* <a asp-page="./Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt fa-2x"></i></a>*@
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>