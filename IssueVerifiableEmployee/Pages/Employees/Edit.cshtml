@page
@model IssuerVerifiableEmployee.Pages.Employees.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee!.Id" />
            <input type="hidden" asp-for="Employee!.UserName" />
            <input type="hidden" asp-for="Employee!.Name" />
            <input type="hidden" asp-for="Employee!.FirstName" />

            <div class="form-group">
                <label class="control-label">@Model.Employee!.UserName</label>
            </div>
            <div class="form-group">
                <label class="control-label">@Model.Employee!.FirstName @Model.Employee!.Name</label>  
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Employee!.Valid">
                        <input class="big_checkbox" asp-for="Employee!.Valid" />
                        @Html.DisplayNameFor(model => model.Employee!.Valid)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    <a asp-page="./User" asp-route-id="@Model.Employee!.UserName">Back to User List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
